import java.io.File;
public class FilesAndDirs{
 public static void main (String[] args){
   File folder = new File("/Users/anassiry/Desktop");
   for (File fileEntry:folder.listFiles()){
     if (fileEntry.isDirectory())
        System.out.println(fileEntry + " is a directory\n");
     else
        System.out.println(fileEntry + " is a file\n");
   }
 }
}
